	public static void csvLookUp(Parcel parcel) {
		Reader in;
		String tableName = parcel.getType().toString();
		try {
			in = new BufferedReader(new FileReader("Postal-Tables/" + tableName + ".csv"));
			Iterable<CSVRecord> records;
			try {
				records = CSVFormat.RFC4180.withFirstRecordAsHeader().parse(in);
				for (CSVRecord record : records) {
					String codeMatch = record.get(postalCode.substring(0,2));
					System.out.println(codeMatch);
				}
			} catch (IOException e) {
				e.printStackTrace();
			}
		} catch (FileNotFoundException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
	}
